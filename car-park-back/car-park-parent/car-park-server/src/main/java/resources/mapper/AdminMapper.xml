<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cgr.mapper.AdminMapper">

    <select id="selectAll" resultType="com.cgr.entity.CPUser">
        SELECT
        id,
        username,
        nick_name,  <!-- 修正字段名 -->
        avatar,
        email,
        phone,
        sex<!-- 新增字段 -->
        FROM cp_user u
        left join cp_user_role ur on u.id = ur.user_id
        <where>
                ur.role_id = 1
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <!-- 密码字段保留但增加空值检查 -->
            <if test="password != null and password != ''">
                AND password = #{password}
            </if>
            <!-- nickName 替换 name -->
            <if test="nickName != null and nickName != ''">
                AND nick_name LIKE CONCAT('%', #{nickName}, '%')
            </if>
            <if test="phone != null and phone != ''">
                AND phone = #{phone}
            </if>
            <if test="email != null and email != ''">
                AND email = #{email}
            </if>
            <if test="avatar != null and avatar != ''">
                AND avatar = #{avatar}
            </if>
            <!-- 新增 sex 字段 -->
            <if test="sex != null and sex != ''">
                AND sex = #{sex}
            </if>
        </where>
    </select>

    <select id="selectById" resultType="com.cgr.entity.CPUser">
        select * from cp_user
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from cp_user
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.cgr.entity.CPUser" useGeneratedKeys="true">
        insert into cp_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="name != null">name,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="avatar != null">avatar,</if>
            <if test="role != null">role,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="name != null">#{name},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="role != null">#{role},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.cgr.entity.CPUser">
        update cp_user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>